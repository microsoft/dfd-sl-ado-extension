{
    "manifestVersion": 1,
    "id": "DfDExtension",
    "publisher": "ms-securitydevops",
    "version": "0.0.1",
    "name": "ADO Extension for DfD (MDC)",
    "description": "ADO Extension for Defender for Devops (Microsoft Defender for Cloud)",
    "public": false,
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "categories": [
        "Azure Pipelines"
    ],
	"contributions": [
        {
            "id": "MSDSecurityStartDecorator",
            "type": "ms.azure-pipelines.pipeline-decorator",
            "targets": [
                "ms.azure-pipelines-agent-job.pre-job-tasks"
            ],
            "properties": {
                "template": "DfDExtension/DfDPreJobExtension.yml"
            }
        },
		{
            "id": "MSDSecurityEndDecorator",
            "type": "ms.azure-pipelines.pipeline-decorator",
            "targets": [
                "ms.azure-pipelines-agent-job.post-job-tasks"
            ],
            "properties": {
                "template": "DfDExtension/DfDPostJobExtension.yml"
            }
        }
    ],
    "files": [
        {
            "path": "DfDExtension/DfDPreJobExtension.yml",
            "addressable": true,
            "contentType": "text/plain"
        },
        {
            "path": "DfDExtension/DfDPostJobExtension.yml",
            "addressable": true,
            "contentType": "text/plain"
        }
    ]
}
